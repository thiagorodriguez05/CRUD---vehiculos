                </columns>

            </TableView>

            <Separator/>

            <!-- ðŸ’¾ EXPORTAR ABAJO -->

            <VBox spacing="5">
                <Label text="Exportar Datos"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <HBox spacing="15">
                    <Button text="Exportar CSV"
                            onAction="#exportarCSV"
                            prefWidth="120"/>

                    <Button text="Exportar TXT"
                            onAction="#exportarTXT"
                            prefWidth="120"/>

                    <Button text="Exportar JSON"
                            onAction="#exportarJSON"
                            prefWidth="120"/>
                </HBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>
